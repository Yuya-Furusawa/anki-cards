{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
